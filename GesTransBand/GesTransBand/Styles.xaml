<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Button}" x:Key="IconButton">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="ToolTip" Value="Click para salir"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="Normal">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="70"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="CopyRight">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style TargetType="{x:Type TextBox}" x:Key="Corto">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style TargetType="{x:Type TextBox}" x:Key="Largo">
        <Setter Property="Width" Value="230"/>
        <Setter Property="Height" Value="20"/>
    </Style>

</ResourceDictionary>
